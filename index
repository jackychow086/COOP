                                <div className="flex items-center border border-white/20 bg-black/10 rounded-full px-3 py-1 gap-2 text-[10px] font-black">
                                    <button onClick={() => setLang('zh-Hant')} className={`transition-all font-black ${lang === 'zh-Hant' ? 'text-blue-400' : 'text-white opacity-60 hover:opacity-100'}`}>ZH</button>
                                    <span className="opacity-20 text-white font-black">|</span>
                                    <button onClick={() => setLang('zh-Hans')} className={`transition-all font-black ${lang === 'zh-Hans' ? 'text-blue-400' : 'text-white opacity-60 hover:opacity-100'}`}>CN</button>
                                    <span className="opacity-20 text-white font-black">|</span>
                                    <button onClick={() => setLang('en')} className={`transition-all font-black ${lang === 'en' ? 'text-blue-400' : 'text-white opacity-60 hover:opacity-100'}`}>EN</button>
                                </div>

                                <button onClick={() => scrollToSection('contact')} className="bg-slate-900 text-white px-6 py-2.5 rounded-full hover:bg-blue-600 transition-all font-black shadow-lg">{t.nav.contact}</button>
                            </div>
                        </div>
                    </nav>

                    {currentPage === 'home' ? <HomePage /> : <SectorsPage />}


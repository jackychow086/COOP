                                            <label className="text-xs font-black uppercase text-slate-400 mb-2 block tracking-widest font-black">{t.contact.name}</label>
                                            <input type="text" required value={formData.name} onChange={(e) => setFormData({...formData, name: e.target.value})} className="w-full bg-slate-50 border border-slate-100 rounded-xl px-5 py-3 outline-none focus:border-blue-600 font-bold transition-all shadow-inner text-slate-900" />
                                        </div>
                                        <div className="text-left font-black">
                                            <label className="text-xs font-black uppercase text-slate-400 mb-2 block tracking-widest font-black">{t.contact.email}</label>
                                            <input type="email" required value={formData.email} onChange={(e) => setFormData({...formData, email: e.target.value})} className="w-full bg-slate-50 border border-slate-100 rounded-xl px-5 py-3 outline-none focus:border-blue-600 font-bold transition-all shadow-inner text-slate-900" />
                                        </div>
                                        <div className="text-left font-black">
                                            <label className="text-xs font-black uppercase text-slate-400 mb-2 block tracking-widest text-left font-black">{t.contact.req}</label>
                                            <textarea required value={formData.requirement} onChange={(e) => setFormData({...formData, requirement: e.target.value})} className="w-full bg-slate-50 border border-slate-100 rounded-xl px-5 py-3 outline-none focus:border-blue-600 font-bold h-32 transition-all shadow-inner text-slate-900" placeholder={t.contact.placeholder}></textarea>
                                        </div>
                                        <button type="submit" disabled={isSubmitting} className="w-full bg-slate-900 text-white py-4 rounded-xl font-black text-lg hover:bg-blue-700 transition-all flex items-center justify-center gap-3 disabled:bg-slate-400 shadow-xl shadow-slate-200 font-black">
                                            {isSubmitting ? <><i className="w-5 h-5 animate-spin border-2 border-white/30 border-t-white rounded-full font-black"></i> {t.contact.submitting}</> : t.contact.submit}
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </section>

                    <footer className="bg-white border-t border-slate-100 py-12 text-left text-slate-900 font-black">
                        <div className="max-w-7xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-8 text-center md:text-left font-black">
                            <img src="COOP_blue.png" alt="COOP" className="h-14 w-auto opacity-90 text-left font-black" onError={(e) => { e.target.onerror = null; e.target.src='https://placehold.co/140x45/transparent/0052cc?text=COOP'; }} />
                            <p className="text-slate-400 text-[10px] font-black uppercase tracking-[0.2em] font-black">{t.footer.rights}</p>

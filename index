                                        {errorStatus && <div className="bg-red-50 text-red-600 p-4 rounded-xl flex items-center gap-3 text-sm font-bold shadow-sm animate-in fade-in font-black"> <i data-lucide="alert-circle" className="w-5 h-5"></i> {errorStatus}</div>}

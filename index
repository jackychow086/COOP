                                            <ul className="space-y-4 text-sm font-bold font-black">
                                                {tech.points.map((p, pi) => <li key={pi} className="font-black">• {p}</li>)}
                                            </ul>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </section>
                    </div>
                );
            };

            return (
                <div lang={lang} className="min-h-screen text-slate-900 text-left bg-white font-medium">
                    {/* Success Modal */}
                    {isSubmitted && (
                        <div className="fixed inset-0 z-[100] flex items-center justify-center p-6 bg-slate-900/60 backdrop-blur-sm animate-in fade-in duration-300">
                            <div className="bg-white rounded-[2.5rem] p-10 max-w-sm w-full text-center shadow-2xl relative font-black">
                                <button onClick={() => setIsSubmitted(false)} className="absolute right-6 top-6 text-slate-400 hover:text-slate-600 transition-colors font-black"><i data-lucide="x" className="w-6 h-6 text-left"></i></button>
                                <div className="w-20 h-20 bg-green-50 text-green-500 rounded-full flex items-center justify-center mx-auto mb-6 text-center font-black text-green-500"><i data-lucide="check-circle-2" className="w-10 h-10 text-center font-black text-green-500"></i></div>

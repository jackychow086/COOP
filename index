                                        <p className="text-blue-100 text-lg mb-12 max-w-sm font-medium font-black">{t.contact.p}</p>
                                    </div>
                                    <div className="space-y-6 text-left font-black">
                                        <div className="flex items-center gap-4 text-left font-black"><div className="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center shadow-inner text-white font-black"><i data-lucide="mail" className="w-5 h-5 text-white"></i></div><span className="font-bold text-white text-sm font-black">info@coop-china.com</span></div>
